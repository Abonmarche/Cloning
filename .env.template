# ArcGIS Online Solution Cloner Configuration
# Copy this file to .env and fill in your actual values

# Source Organization Configuration
SOURCE_URL=https://www.arcgis.com
SOURCE_USERNAME=your_source_username
SOURCE_PASSWORD=your_source_password
SOURCE_FOLDER=your_source_folder_name

# Destination Organization Configuration
DEST_URL=https://www.arcgis.com
DEST_USERNAME=your_dest_username
DEST_PASSWORD=your_dest_password
DEST_FOLDER=your_dest_folder_name

# Optional: Cloning Options (uncomment to override defaults)
# CLONE_DATA=False
# CREATE_DUMMY_FEATURES=False
# PRESERVE_ITEM_IDS=False
# SKIP_EXISTING=False
# ROLLBACK_ON_ERROR=False
# UPDATE_REFS_BEFORE_CREATE=False

# Output Options
# LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL, NONE
# JSON_OUTPUT_ENABLED=True  # Set to False to disable JSON diagnostic file output